@{Layout = null;}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Get into Breeze.js</title>
    <link rel="stylesheet" href="/Content/bootstrap.min.css" />
</head>
<body>
     <div class="navbar ">
        <div class="navbar-inner">
            <a class="brand" href="/">Get into Breeze.js</a>
        </div>
    </div>
    <div class="container">
        <header class="jumbotron subhead" id="overview">
            <div class="row">
                <div class="span2"></div>
                <div class="span8">
                    <h2>(Some) Cities of the World</h2>
                </div>
                <div class="span2"></div>
            </div>
        </header>
        <div id="body">
            <section id="content">
                <div class="row">
                    <div class="span2"></div>
                    <div class="span8">
                        <label for="txtCountry">Country:</label>
                        <input type="text" name="txtCountry" data-bind="value: searchCountry" />
                        <label for="txtCity">City:</label>
                        <input type="text" name="txtCity" data-bind="value: searchCity" />
                        <label for="selOrderBy">Order By:</label>
                        <select name="selOrderBy" data-bind="value: selOrderBy">
                            <option value=""></option>
                            <option value="CountryName">Country</option>
                            <option value="CityName">City</option>
                        </select>
                        <label for="orderType">Order Type:</label>
                        <select name="orderType" data-bind="value: selOrderType">
                            <option value=""></option>
                            <option value="asc">Ascendent</option>
                            <option value="desc">Descendent</option>
                        </select>
                        <input type="button" name="btnSearch" value="Filter" data-bind="click: filterCities" />
                    </div>
                    <div class="span2"></div>
                </div>
                <div class="row">
                    <div class="span2"></div>
                    <div class="span8">
                        <table class="table table-striped table-condensed">
                          <thead>
                            <tr>
                              <th>Country</th>
                              <th>City</th>
                            </tr>
                          </thead>
                          <tbody  data-bind="foreach: cities">
                            <tr>
                              <td data-bind="text: CountryName"></td>
                              <td data-bind="text: CityName"></td>
                            </tr>
                          </tbody>
                        </table>
                    </div>
                    <div class="span2"></div>
                </div>
            </section>
        </div>

    </div>
    <!--3rd party library scripts -->
    <script src="/Scripts/jquery-2.0.0.min.js"></script>
    <script src="/Scripts/knockout-2.2.1.js"></script>
    <script src="/Scripts/q.js"></script>
    <script src="/Scripts/breeze.debug.js"></script>

    <!-- Application scripts -->
    <script src="/Scripts/app/GetIntoBreezeViewModel.js"></script>
</body>
</html>
