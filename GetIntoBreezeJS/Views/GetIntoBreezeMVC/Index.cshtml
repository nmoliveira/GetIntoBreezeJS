@{Layout = null;}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Get into Breeze.js</title>
    <link rel="stylesheet" href="/Content/site.css"/>
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">
                    <a href="~/">Cities of the World</a>
                </p>
            </div>
        </div>
    </header>
    <div id="body">
        <section id="content" class="content-wrapper main-content">
            <label for="txtCountry">Country:</label>
            <input type="text" name="txtCountry" data-bind="value: searchCountry"/>
            <label for="txtCity">City:</label>
            <input type="text" name="txtCity" data-bind="value: searchCity"/>
            <br />
            <label for="selOrderBy">Order By:</label>
            <select name="selOrderBy" data-bind="value: selOrderBy">
                <option value=""></option>
                <option value="CountryName">Country</option>
                <option value="CityName">City</option>
            </select>
            <label for="orderType">Order Type:</label>
            <select name="orderType" data-bind="value: selOrderType">
                <option value=""></option>
                <option value="asc">Ascendent</option>
                <option value="desc">Descendent</option>
            </select>
            <input type="button" name="btnSearch" value="Filter" data-bind="click: filterCities"/>
            <ul data-bind="foreach: cities">
                <li>
                    <form>
                        <span data-bind="text: CityName"></span>,
                        <span data-bind="text: CountryName"></span>
                    </form>
                </li>
            </ul>
            
        </section>
    </div> 
    <!--3rd party library scripts -->
    <script src="/Scripts/jquery-2.0.0.min.js"></script>
    <script src="/Scripts/knockout-2.2.1.js"></script>
    <script src="/Scripts/q.js"></script>
    <script src="/Scripts/breeze.debug.js"></script>

    <!-- Application scripts -->
    <script src="/Scripts/app/GetIntoBreezeViewModel.js"></script>
</body>
</html>